{
  "name": "create-webpack",
  "version": "0.1.0",
  "description": "A CLI to create new Webpack plugins and loaders",
  "main": "src/main.js",
  "bin": "./bin/create-webpack.js",
  "scripts": {
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "lint:fix": "npm run prettier:write",
    "lint": "npm run prettier:check",
    "test": "npm run lint",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "webpack",
    "cli"
  ],
  "author": "Anthon <anthon.kendel@gmail.com>",
  "license": "MIT",
  "peerDepenencies": {
    "schema-utils": "^2.7.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "arg": "4.1.3",
    "esm": "3.2.25",
    "inquirer": "7.1.0"
  },
  "devDependencies": {
    "@arbetsmyra/commitlint-config": "1.3.0",
    "@arbetsmyra/prettier-config": "1.2.0",
    "@arbetsmyra/semantic-release-config": "1.0.3",
    "husky": "4.2.5",
    "loader-utils": "2.0.0",
    "prettier": "2.0.5",
    "schema-utils": "2.7.0",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.11"
  },
  "renovate": {
    "extends": [
      "@arbetsmyra"
    ]
  },
  "prettier": "@arbetsmyra/prettier-config",
  "commitlint": {
    "extends": [
      "@arbetsmyra"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint:fix"
    }
  },
  "release": {
    "extends": [
      "@arbetsmyra/semantic-release-config"
    ]
  }
}
