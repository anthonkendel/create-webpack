{
  "name": "new-webpack",
  "version": "1.0.6",
  "description": "A CLI to create new Webpack plugins and loaders",
  "main": "src/main.js",
  "bin": "./bin/new-webpack.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/anthonkendel/new-webpack.git"
  },
  "scripts": {
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "lint:fix": "npm run prettier:write",
    "lint": "npm run prettier:check",
    "test": "npm run lint",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "webpack",
    "cli",
    "typescript",
    "javascript",
    "plugin",
    "loader"
  ],
  "author": "Anthon <anthon.kendel@gmail.com>",
  "license": "MIT",
  "optionalDependencies": {
    "@types/loader-utils": "2.0.1",
    "@types/schema-utils": "2.4.0",
    "@types/webpack": "4.41.21",
    "loader-utils": "2.0.0",
    "schema-utils": "2.7.0",
    "webpack": "4.44.1",
    "webpack-cli": "3.3.12"
  },
  "dependencies": {
    "arg": "4.1.3",
    "cross-spawn": "7.0.3",
    "esm": "3.2.25",
    "inquirer": "7.3.3"
  },
  "devDependencies": {
    "@arbetsmyra/commitlint-config": "1.3.2",
    "@arbetsmyra/prettier-config": "1.2.0",
    "@arbetsmyra/semantic-release-config": "1.0.5",
    "@types/loader-utils": "2.0.1",
    "@types/schema-utils": "2.4.0",
    "@types/webpack": "4.41.21",
    "husky": "4.2.5",
    "loader-utils": "2.0.0",
    "prettier": "2.1.1",
    "schema-utils": "2.7.0",
    "typescript": "4.0.2",
    "webpack": "4.44.1",
    "webpack-cli": "3.3.12"
  },
  "renovate": {
    "extends": [
      "@arbetsmyra"
    ]
  },
  "prettier": "@arbetsmyra/prettier-config",
  "commitlint": {
    "extends": [
      "@arbetsmyra"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint:fix"
    }
  },
  "release": {
    "extends": [
      "@arbetsmyra/semantic-release-config"
    ]
  }
}
